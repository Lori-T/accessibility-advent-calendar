{% block headIcons %}
<link rel="apple-touch-icon" sizes="180x180" href="{{asset_path}}images/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="{{asset_path}}images/avicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="{{asset_path}}images/favicon-16x16.png">

<meta property="og:image" content="{{hostname}}{{asset_path}}images/accessibility-2024.png">
<meta property="og:image:type" content="image/png">
<meta property="og:image:width" content="1024">
